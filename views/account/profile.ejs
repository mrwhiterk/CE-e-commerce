<!DOCTYPE html>
<html>
<% include ../partials/header %> 
  <body>

<% include ../partials/nav %>

<body>
  <div class="container emp-profile">
    <div class="row">
      <div class="col-md-4">
        <div class="profile-img">
          <!-- //insert image -->
          <img src='<%= user.profile.picture %>' />
        </div>
      </div>
      <div class="col-md-6">
        <div class="profile-head">
          <h5></h5>

          <p class="proile-rating">
            RANKINGS :
            <span>8/10</span>
          </p>
          <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item">
              <a
                class="nav-link active"
                id="home-tab"
                data-toggle="tab"
                href="#home"
                role="tab"
                aria-controls="home"
                aria-selected="false" >
                About
              </a>
            </li>
            <li class="nav-item">
              <a
                class="nav-link"
                id="profile-tab"
                data-toggle="tab"
                href="#profile"
                role="tab"
                aria-controls="profile"
                aria-selected="true"
              >
                Edit Profile
              </a>
            </li>
          </ul>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-4"></div>
      <div class="col-md-8">
        <div class="tab-content profile-tab" id="myTabContent">
          <div
            class="tab-pane fade show active"
            id="home"
            role="tabpanel"
            aria-labelledby="home-tab"
          >
          
            <div class="row">
              <div class="col-md-6">
                <label>Name: </label>
              </div>
              <div class="col-md-6"><%= user.profile.name %></div>
            </div>
            <div class="row">
              <div class="col-md-6">
                <label>Email: </label>
              </div>
              <div class="col-md-6"><%= user.email %></div>
            </div>

            <div class="row">
              <div class="col-md-6">
                <label>Seller: </label>
              </div>
              <div class="col-md-6">
                <p>Clothes and Whatever</p>
              </div>
            </div>
          </div>
          <div
            class="tab-pane fade"
            id="profile"
            role="tabpanel"
            aria-labelledby="profile-tab"
          >
            <% include ../account/edit-profile %>
          </div>
        </div>
      </div>
    </div>
    </div>
    <% include ../partials/footer %>

 </body>
</html>