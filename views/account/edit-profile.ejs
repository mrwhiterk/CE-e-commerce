<form class="form-signin" method="POST" action="/users/editUser?_method=PUT">

  <label for="inputName" class="sr-only">Name</label>
  <input type="text" id="inputName" class="form-control" value="<%= user.profile.name %>" name="name">

  <br />
  <label for="inputEmail" class="sr-only">Email address</label>
  <input type="text" id="inputEmail" class="form-control" value="<%= user.email %>"  name="email">

  <br />
  <label for="inputAddress" class="sr-only">Address</label>
  <input type="text" id="inputAddress" class="form-control" value="<%= user.address %>" name="address">

  <br />
  <label for="inputPassword">Old Password</label>
  <input type="text" id="inputPassword" class="form-control" name="oldPassword">

  <br />
  <label for="inputPassword">New Password</label>
  <input type="text" id="inputPassword" class="form-control" name="password">

  <br />
  <label for="inputPassword">New Password(Again)</label>
  <input type="text" id="inputPassword" class="form-control" name="password">

  <br />
  <button class="btn btn-lg btn-primary btn-block" type="submit">Update Profile</button>

</form>